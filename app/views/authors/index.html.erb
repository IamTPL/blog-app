<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Email</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.age %></td>
        <td><%= author.email %></td>
        <td><%= link_to 'Show', author, class: 'link-primary link-offset-2' %></td>
        <td><%= link_to 'Edit', edit_author_path(author), class: 'link-primary link-offset-2' %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }, class: 'link-primary link-offset-2' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path, class: 'btn btn-dark text-white' %>
